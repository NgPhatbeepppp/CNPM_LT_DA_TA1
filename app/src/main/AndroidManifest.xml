        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CNPM_LT_DA_TA"
        tools:targetApi="31">

        <activity
            android:name=".User.EditUserActivity"
            android:exported="false" />
        <activity
            android:name=".User.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".User.UserManagementActivity"
            android:exported="false" />

        <activity
            android:name=".Course.CourseDetailActivity"
            android:exported="false" />
        <activity
            android:name=".Course.FlashcardStudyActivity"
            android:exported="false" />

        <activity
            android:name=".Manager.LearnManagementActivity"
