        <activity
            android:name=".Manager.FlashcardCreateActivity"
            android:exported="false" />
        <activity
            android:name=".Manager.FlashcardEditActivity"
            android:exported="false" />

        <activity
            android:name=".Manager.FlashcardSetCreateActivity"
            android:exported="false" />
        <activity
            android:name=".Manager.FlashcardSetEditActivity"
            android:exported="false" />

        <activity
            android:name=".Manager.CourseCreateActivity"
            android:exported="false" />
        <activity
            android:name=".Manager.CourseEditActivity"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <activity
            android:name=".User.LoginActivity"
            android:exported="true"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
